# ===========================================
# King Neon API - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# -------------------------------------------
# Database (PostgreSQL)
# -------------------------------------------
DATABASE_HOST=localhost
DATABASE_PORT=5434
DATABASE_USER=king_neon
DATABASE_PASSWORD=king_neon_secret
DATABASE_NAME=king_neon_db

# -------------------------------------------
# Redis (optional - for caching/sessions)
# -------------------------------------------
REDIS_URL=redis://localhost:6380

# -------------------------------------------
# JWT Authentication
# -------------------------------------------
JWT_SECRET=king-neon-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# -------------------------------------------
# API Server
# -------------------------------------------
PORT=4000
NODE_ENV=development

# -------------------------------------------
# CORS
# -------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# -------------------------------------------
# MinIO (Object Storage)
# -------------------------------------------
MINIO_ENDPOINT=localhost
MINIO_PORT=9002
MINIO_ACCESS_KEY=king_neon_minio
MINIO_SECRET_KEY=king_neon_minio_secret
MINIO_BUCKET=king-neon
MINIO_USE_SSL=false

# -------------------------------------------
# Stripe (Payments)
# Get keys from: https://dashboard.stripe.com/test/apikeys
# -------------------------------------------
STRIPE_SECRET_KEY=sk_test_placeholder_key_here
STRIPE_WEBHOOK_SECRET=whsec_xxx

# -------------------------------------------
# Email (SMTP)
# For Gmail: use App Password, not account password
# https://support.google.com/accounts/answer/185833
# -------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM="King Neon" <noreply@kingneon.com>
ADMIN_EMAIL=admin@kingneon.com
