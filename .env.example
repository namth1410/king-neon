# ===========================================
# King Neon Production - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values before running docker compose
# Command: cp .env.example .env

# -------------------------------------------
# Infrastructure (Postgres, Redis, MinIO)
# -------------------------------------------
POSTGRES_USER=king_neon
POSTGRES_PASSWORD=king_neon_secret
POSTGRES_DB=king_neon_db

# MinIO Root Credentials (for setup)
MINIO_ROOT_USER=king_neon_minio
MINIO_ROOT_PASSWORD=king_neon_minio_secret

# -------------------------------------------
# API Service (apps/api)
# -------------------------------------------
# Database Connection (Internal Docker Network)
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=king_neon
DATABASE_PASSWORD=king_neon_secret
DATABASE_NAME=king_neon_db

# Redis Connection (Internal Docker Network)
REDIS_URL=redis://redis:6379

# MinIO Connection (Internal Docker Network)
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=king_neon_minio
MINIO_SECRET_KEY=king_neon_minio_secret
MINIO_BUCKET=king-neon
MINIO_USE_SSL=false

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=king-neon-super-secret-jwt-key
JWT_EXPIRES_IN=7d

# Stripe
STRIPE_SECRET_KEY=sk_test_placeholder_key_here
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM="King Neon <noreply@kingneon.com>"
ADMIN_EMAIL=admin@kingneon.com

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# -------------------------------------------
# CMS Service (apps/cms)
# -------------------------------------------
ADMIN_JWT_SECRET=cms-admin-jwt-secret
API_TOKEN_SALT=cms-api-token-salt
TRANSFER_TOKEN_SALT=cms-transfer-token-salt
APP_KEYS=cms-app-key-1,cms-app-key-2

# -------------------------------------------
# Web & Admin Clients (Next.js)
# -------------------------------------------
# These should point to the public URL of your VPS or Load Balancer
NEXT_PUBLIC_API_URL=http://localhost:4000/api
NEXT_PUBLIC_CMS_URL=http://localhost:1337
