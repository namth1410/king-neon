# ===========================================
# King Neon - Development Environment Template
# ===========================================
# For Docker Swarm dev stack (runs alongside prod on different ports)
# Copy to .env.dev and fill in the values
#
# Dev ports: web:3010, api:4010, admin:3011, minio:9010/9011

# Node Environment
NODE_ENV=development

# Database
DATABASE_HOST=postgres
DATABASE_PORT=5432
POSTGRES_USER=king_neon_dev
POSTGRES_PASSWORD=king_neon_dev_secret
POSTGRES_DB=king_neon_dev_db

# Redis
REDIS_URL=redis://redis:6379

# MinIO
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ROOT_USER=king_neon_minio_dev
MINIO_ROOT_PASSWORD=king_neon_minio_dev_secret
MINIO_USE_SSL=false
MINIO_BUCKET=king-neon-dev

# JWT
JWT_SECRET=dev-jwt-secret-change-me
JWT_EXPIRES_IN=7d

# Stripe (test keys for dev)
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_test_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# Email (can use same as prod or leave empty for dev)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM="King Neon Dev <noreply@namth.online>"
ADMIN_EMAIL=admin@namth.online

# Public URLs (dev ports - localhost)
NEXT_PUBLIC_API_URL=http://localhost:4010/api
NEXT_PUBLIC_WEB_URL=http://localhost:3010
NEXT_PUBLIC_ADMIN_URL=http://localhost:3011

# OR if using Cloudflare Tunnel for dev:
# NEXT_PUBLIC_API_URL=https://dev-kingneon-api.namth.online/api
# NEXT_PUBLIC_WEB_URL=https://dev-kingneon.namth.online
# NEXT_PUBLIC_ADMIN_URL=https://dev-kingneon-admin.namth.online

# CORS
CORS_ORIGINS=http://localhost:3010,http://localhost:3011
