# ===========================================
# King Neon - Production Environment Template
# ===========================================
# For Docker Swarm with Cloudflare Tunnel
# Copy to .env.prod and fill in the values
#
# Cloudflare Tunnel: uses ~/.cloudflared/ credentials (not token)

# Node Environment
NODE_ENV=production

# Database
DATABASE_HOST=postgres
DATABASE_PORT=5432
POSTGRES_USER=king_neon
POSTGRES_PASSWORD=your-strong-password-here
POSTGRES_DB=king_neon_db

# Redis
REDIS_URL=redis://redis:6379

# MinIO
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ROOT_USER=king_neon_minio
MINIO_ROOT_PASSWORD=your-minio-password-here
MINIO_USE_SSL=false
MINIO_BUCKET=king-neon

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Stripe
STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_xxx

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM="King Neon <noreply@namth.online>"
ADMIN_EMAIL=admin@namth.online

# Public URLs
NEXT_PUBLIC_API_URL=https://kingneon-api.namth.online/api
NEXT_PUBLIC_WEB_URL=https://kingneon.namth.online
NEXT_PUBLIC_ADMIN_URL=https://kingneon-admin.namth.online

# CORS
CORS_ORIGINS=https://kingneon.namth.online,https://kingneon-admin.namth.online
